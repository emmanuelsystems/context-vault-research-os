{
    "buildCommand": "npm run build --prefix web",
    "devCommand": "npm run dev --prefix web -- --host 0.0.0.0",
    "outputDirectory": "web/dist",
    "functions": {
        "api/index.ts": {
            "includeFiles": "runs/**"
        }
    },
    "rewrites": [
        {
            "source": "/sse",
            "destination": "/api/index"
        },
        {
            "source": "/api/message",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
